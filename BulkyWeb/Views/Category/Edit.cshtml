@model Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container">
    <form method="post">

        @* <input asp-for="Id" hidden> *@

        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">@ViewData["Title"]</h2>
                <hr>
            </div>

            @* <div asp-validation-summary="ModelOnly"></div> *@

            <div class="form-floating mb-3 p-1">
                <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Category Name">
                <label asp-for="Name" for="floatingInput"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 p-1">
                <input asp-for="DisplayOrder" type="text" class="form-control" id="floatingDisplayOrder" placeholder="Display Order">
                <label asp-for="DisplayOrder" for="floatingDisplayOrder"></label>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                </div>
            </div>
            
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}