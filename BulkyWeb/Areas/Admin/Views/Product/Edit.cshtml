@model Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
            <form method="post" class="row">

        @* <input asp-for="Id" hidden> *@

        <div class="border p-3">
           
            @* <div asp-validation-summary="ModelOnly"></div> *@

             <div class="form-floating py-2 col-12">
                <input asp-for="Title" type="text" class="form-control border-0 shadow" id="floatingInput" placeholder="Product Title">
                <label asp-for="Title" class="ms-2" for="floatingInput"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" type="text" class="form-control border-0 shadow" id="floatingDesc" placeholder="Description">
                <label asp-for="Description" class="ms-2" for="floatingDesc"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" type="text" class="form-control border-0 shadow" id="floatingISBN" placeholder="ISBN">
                <label asp-for="ISBN" class="ms-2" for="floatingISBN"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" type="text" class="form-control border-0 shadow" id="floatingA" placeholder="Author">
                <label asp-for="Author" class="ms-2" for="floatingA"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" id="floatingP1" placeholder="List Price">
                <label asp-for="ListPrice" class="ms-2" for="floatingP1"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" type="text" class="form-control border-0 shadow" id="floatingP" placeholder="Price for 1-50">
                <label asp-for="Price" class="ms-2" for="floatingP"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" type="text" class="form-control border-0 shadow" id="floatingP2" placeholder="Price for 50+">
                <label asp-for="Price50" class="ms-2" for="floatingP2"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" type="text" class="form-control border-0 shadow" id="floatingP3" placeholder="Price for 100+">
                <label asp-for="Price100" class="ms-2" for="floatingP32"></label>
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                </div>
            </div>
            
        </div>
    </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}